<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="line">
            <corners
                android:radius="15dp" />
            <stroke
                android:color="@color/cardview_shadow_start_color"
                android:width="@dimen/seek_bar_thickness"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="line">
                <corners
                    android:radius="15dp" />
                <stroke
                    android:color="@color/UDE_primary"
                    android:width="@dimen/seek_bar_thickness"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape
                android:shape="line">
                <corners
                    android:radius="15dp" />
                <stroke
                    android:color="@color/UDE_primaryAccent"
                    android:width="@dimen/seek_bar_thickness"/>
            </shape>
        </clip>
    </item>
</layer-list>