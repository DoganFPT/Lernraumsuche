<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<SeekBar android:id="@+id/weight"
    android:layout_height="50dp"
    android:layout_width="285dp"
    android:min="1"
    android:max="10"
    android:progress="1"
    android:thumbTint="@color/UDE_primary"
    android:progressDrawable="@drawable/seek_style"
    android:splitTrack="false"
    android:thumb="@drawable/seek"
    android:layout_marginStart="15dp"
     />
    <TextView
        android:id="@+id/textView_campus_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/caption_zero"
        android:textAlignment="center"
        android:textSize="20sp" />
</LinearLayout>